<script src="https://code.jquery.com/jquery-1.9.1.js"></script>
<section class="page-section portfolio" id="portfolio">
  <div class="container">
    <!-- Portfolio Section Heading-->

    <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Meeting History</h2>
    <div class="divider-custom">
      <div class="divider-custom-line"></div>
      <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
      <div class="divider-custom-line"></div>
    </div>

    <label for="filter">Logged as true</label>
    <input type="checkbox" id="filter_true" class="log_filter" checked/>
    
    <label for="filter">Logged as false</label>
    <input type="checkbox" id="filter_false" class="log_filter" checked/>
    
    <label for="filter">Logged as canceled</label>
    <input type="checkbox" id="filter_canceled" class="log_filter" checked/>
    
    <table class="table table-striped col-md-12">
      <thead>
      <tr>
        <th>Meeting Date</th>
        <th>First Name</th>
        <th>Last Name</th>
        <th>Birthdate</th>
        <th>Meeting Log</th>
        <th>Meeting Info</th>
      </tr>
      </thead>
      <tbody>
      <% @meetings.each do |meeting| %>
        <tr class= <%= "#{meeting.log}" %> >
          <td><%= meeting.start %></td>
          <td><%= meeting.student.user.first_name %></td>
          <td><%= meeting.student.user.last_name %></td>
          <td><%= meeting.student.birthdate %></td>
          <td><%= meeting.log %></td>
          <td>
            <%= link_to 'Meeting Details', nurse_meeting_path(@nurse, meeting) %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    
    <script>
        $(document).ready(function() {
            $('input:checkbox#filter_true').click(function () {
                if ($(this).is(':checked')) {
                    $("tr.true").show();
                } else {
                    $("tr.true").hide();
                };
            })
        });
        $(document).ready(function() {
            $('input:checkbox#filter_false').click(function () {
                if ($(this).is(':checked')) {
                    $("tr.false").show();
                } else {
                    $("tr.false").hide();
                };
            })
        });
        $(document).ready(function() {
            $('input:checkbox#filter_canceled').click(function () {
                if ($(this).is(':checked')) {
                    $("tr.canceled").show();
                } else {
                    $("tr.canceled").hide();
                };
            })
        });
    </script>

</div>

               </div>
       </section>