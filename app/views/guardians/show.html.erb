
<div class="modal-dialog modal-xl">
  <div class="modal-content">
    <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
    <div class="modal-body text-center pb-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Details about <em><%= @guardian.user.first_name%> <%= @guardian.user.last_name %></em></h2>
            <div class="divider-custom">
              <div class="divider-custom-line"></div>
              <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
              <div class="divider-custom-line"></div>
            </div>

                <ul class="list-group" id="details">
                  <li class="list-group-item">Name: <%= @guardian.user.first_name %> <%= @guardian.user.last_name %></li>
                  <li class="list-group-item">Email: <%= @guardian.user.email %></li>
                  <li class="list-group-item">
                    <% @guardian.students.each do |student| %>
                      <ul class="list-group" name="student_details">
                        <li class="list-group-item" class="list-group-item">
                          <%= link_to "#{student.user.first_name} #{student.user.last_name}", student_path(student) %>
                        </li>
                      </ul>
                    <% end %>
                  </li>
                </ul>
                <h3>Meetings List</h3>
                <table class="table table-striped">
                  <thead>
                  <tr>
                    <th>Meeting Day</th>
                    <th>Student</th>
                    <th>Nurse</th>
                    <th>Info</th>
                  </tr>
                  </thead>
                  <tbody>
                  <% @meetings.each do |meeting| %>
                    <tr>
                      <td>
                        <%= meeting.start %>
                      </td>
                      <td>
                        <%= meeting.student.user.first_name %> <%= meeting.student.user.last_name %>
                      </td>
                      <td>
                        <%= meeting.nurse.user.first_name %> <%= meeting.nurse.user.last_name %>
                      </td>
                      <td>
                        <%= meeting.info %>
                      </td>
                    </tr>
                  <% end %>
                  </tbody>

                </table>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>