!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %meta{:content => "width=device-width, initial-scale=1, shrink-to-fit=no", :name => "viewport"}/
    %meta{:content => "", :name => "description"}/
    %meta{:content => "", :name => "author"}/
    %title  Nurse Meds!
    / Favicon
    %link{:href => "assets/favicon.ico", :rel => "icon", :type => "image/x-icon"}/
    / Font Awesome icons (free version)
    %script{:crossorigin => "anonymous", :src => "https://use.fontawesome.com/releases/v5.15.4/js/all.js"}
    / Google fonts
    %link{:href => "https://fonts.googleapis.com/css?family=Montserrat:400,700", :rel => "stylesheet", :type => "text/css"}/
    %link{:href => "https://fonts.googleapis.com/css?family=Lato:400,700,400italic,700italic", :rel => "stylesheet", :type => "text/css"}/
    / Core theme CSS (includes Bootstrap)


    = stylesheet_link_tag 'styles', 'media' => 'all'
    = javascript_include_tag 'scripts'
    = csrf_meta_tags


    / Navigation
    %nav#mainNav.navbar.navbar-expand-lg.bg-secondary.text-uppercase.fixed-top
      .container
        %a.navbar-brand{:href => root_path}  Nurse Meds!
        %button.navbar-toggler.text-uppercase.font-weight-bold.bg-primary.text-white.rounded{"aria-controls" => "navbarResponsive", "aria-expanded" => "false", "aria-label" => "Toggle navigation", "data-bs-target" => "#navbarResponsive", "data-bs-toggle" => "collapse", :type => "button"}
          Menu
          %i.fas.fa-bars
        #navbarResponsive.collapse.navbar-collapse
          - if @current_user
            = "Logged in as " + @current_user.first_name + " " + @current_user.last_name
            = link_to("Log out", logout_path, id: "logout", method: "post")

            - if @current_user.administrator
              %ul.navbar-nav.ms-auto
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href =>  administrators_stats_path } Stats
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => nurses_path } Nurses
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => schools_path } Schools
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => medications_path } Medications

            - if @current_user.nurse
              %ul.navbar-nav.ms-auto
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => students_path } Students
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => nurse_meetings_path(@current_user.nurse) } Meetings
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => medications_path } Medications
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => nurse_path(@current_user.nurse) } My Schedule

            - if @current_user.student
              %ul.navbar-nav.ms-auto
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => student_path(@current_user.student) } My Info
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => student_medication_assignments_path(@current_user.student) } Medications

            - if @current_user.guardian
              %ul.navbar-nav.ms-auto
                %li.nav-item.mx-0.mx-lg-1
                  %a.nav-link.py-3.px-0.px-lg-3.rounded{:href => guardian_path(@current_user.guardian) } My Info


    / Masthead
    %header.masthead.bg-primary.text-white.text-center
      .container.align-items-center.flex-column
        / Masthead Heading
        %h1.masthead-heading.text-uppercase.mb-0 We are here to assist you
    / Portfolio Section
    %section#portfolio.page-section.portfolio
    %body

    #main
      - if flash[:notice]
        .alert.alert-success{:role => "alert"}
        #notice.message= flash[:notice]
      - elsif flash[:warning]
        .alert.alert-warning{:role => "alert"}
        #warning.message= flash[:warning]
      = yield



    / Footer
    %footer.footer.text-center
      .container
        .row
          / Footer Location
          .col-lg-4.mb-5.mb-lg-0
            %h4.text-uppercase.mb-4 Location
            %p.lead.mb-0
              2 W Washington St
              %br/
              Iowa City, IA 52240
          / Footer Social Icons
          .col-lg-4.mb-5.mb-lg-0
            %h4.text-uppercase.mb-4 Around the Web
            %a.btn.btn-outline-light.btn-social.mx-1{:href => "https://www.linkedin.com/in/seojin-ellie-ko-0712/"}
              %i.fab.fa-fw.fa-linkedin-in
            %a.btn.btn-outline-light.btn-social.mx-1{:href => "https://github.com/ellieko/nursemed"}
              %i.fab.fa-fw.fa-github
          / Footer About Text
          .col-lg-4
            %h4.text-uppercase.mb-4 About Nurse Meds
            %p.lead.mb-0
              This web application made at UIowa
              to help local schools in our community.
    / Copyright Section
    .copyright.py-4.text-center.text-white
      .container
        %small Copyright Â© NURSEMEDS 2021

