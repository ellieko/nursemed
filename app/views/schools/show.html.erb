<div class="modal-dialog modal-xl">
  <div class="modal-content">
    <div class="modal-header border-0"><button class="btn-close" type="button" data-bs-dismiss="modal" aria-label="Close"></button></div>
    <div class="modal-body text-center pb-5">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-lg-8">
            <h2 class="page-section-heading text-center text-uppercase text-secondary mb-0">Details about school</h2>
            <div class="divider-custom">
              <div class="divider-custom-line"></div>
              <div class="divider-custom-icon"><i class="fas fa-star"></i></div>
              <div class="divider-custom-line"></div>
            </div>


            <ul class="list-group" id="details">
              <li class="list-group-item">
                Name:
                <%= @school.name %>
              </li>
            </ul>

            <div class="row">
              <%= link_to 'Edit', edit_school_path(@school), :class => 'btn btn-primary col-2' %>
              <%= link_to 'Remove', destroy_school_path(@school), 'data-method' => 'delete', 'data-confirm' => 'Are you sure?', :class => 'btn btn-danger col-2' %>
              <%= link_to 'Back to School List', schools_path, :class => 'btn btn-primary col-2' %>
            </div>



          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</div>